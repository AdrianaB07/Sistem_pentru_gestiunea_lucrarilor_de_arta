@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/containerAlb.css" />
</head>

<style>
    body {
        background-color: #5b0013;
    }

    h1 {
        color: white;
        font-weight: bold;
        margin-bottom: 20px;
    }

    h2 {
        color: #800020;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .container-white {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-floating .form-control {
        border: 1px solid #800020;
    }

        .form-floating .form-control:focus {
            border-color: #800020;
            box-shadow: 0 0 0 0.2rem rgba(128, 0, 32, 0.25);
        }

    .form-floating .form-label {
        color: #800020;
    }

    .btn-custom {
        background-color: #800020;
        border-color: #800020;
        color: white;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #a52a2a;
            border-color: #a52a2a;
        }

    .text-danger {
        color: #dc3545 !important;
    }

    a {
        color: #800020; /* Burgundy pentru link-uri */
    }

        a:hover {
            color: #a52a2a; /* Burgundy mai închis pentru hover */
        }

    .checkbox-container {
        display: flex;
        align-items: center;
        margin-left: 1.5rem; /* Adjust this value as needed */
    }

        .checkbox-container input {
            margin-right: 10px;
        }

    .form-container {
        margin-top: 50px; /* Add space between navbar and form */
    }
</style>

<h1>@ViewData["Title"]</h1>
<div class="row justify-content-center form-container">
    <div class="col-md-4">
        <!-- Reduced column width -->
        <div class="container-white">
            <section>
                <form id="account" method="post">
                    <h2>Use a local account to log in</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox-container mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-custom">Log in</button>
                    </div>
                    <div class="mt-3">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
